[flake8]
max-line-length = 88
extend-ignore =
    E203,
    E501,
    W503,
    F401,
    F841,
    C901
exclude =
    .git,
    __pycache__,
    .venv,
    .eggs,
    *.egg,
    build,
    dist,
    .mypy_cache,
    .pytest_cache
per-file-ignores =
    __init__.py:F401
    tests/*:S101
max-complexity = 10
docstring-convention = google
